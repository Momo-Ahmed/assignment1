<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layout1">

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="12dp"
        android:background="#FF5733"
        android:gravity="center"
        android:text="FlAT UI KIT"
        android:textColor="#FFFF"
        android:textSize="50dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="280dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="5dp"
            android:background="#FFC300"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09.32"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="35dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan10,2014"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sun"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="25"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="35dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEW YORK"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="5dp"
                android:background="#B9D8E4"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/email" />

            <ImageButton
                android:id="@+id/cloud"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="12dp"
                android:background="#676564"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/uploading" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="5dp">


        <Button
            android:layout_width="265dp"
            android:layout_height="90dp"
            android:background="#FF5733"
            android:drawableLeft="@drawable/searching"
            android:paddingStart="10dp"
            android:text="WWW"
            android:textColor="#FFF"
            android:textSize="50dp"

            />

        <ImageButton
            android:id="@+id/clock"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="24dp"
            android:background="#FFC300"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/clock" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="12dp"
        android:background="#B9D8E4"
        android:drawableLeft="@drawable/music"
        android:paddingStart="10dp"
        android:text="NOW PLAYING"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="40dp"/>

</LinearLayout>
